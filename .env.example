# Application Configuration
APP_NAME=ai-agent-app
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000

# API Keys (Replace with your actual keys)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Windmill Configuration
WINDMILL_URL=http://localhost:8080
WINDMILL_TOKEN=your_windmill_token_here
WINDMILL_WORKSPACE=default

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Docker Configuration
DOCKER_NETWORK=ai-agent-network
DOCKER_COMPOSE_PROJECT=ai-agent-app

# PostgreSQL Configuration (for Docker Compose)
POSTGRES_USER=aiagent
POSTGRES_PASSWORD=aiagent_password
POSTGRES_DB=aiagent_db

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production

# CORS Configuration (comma-separated list of allowed origins)
# For development: * allows all origins
# For production: specify exact origins like https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=*

# Third-party Services
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Agent Configuration
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT=300
AGENT_MODEL=gpt-4
AGENT_TEMPERATURE=0.7
